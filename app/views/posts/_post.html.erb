
<div class="post-block">
<li id="post-<%= post.id %>">

  <span class="user"><%= link_to post.user.username, post.user %></span>
  <span class="content"><p><%= post.message %></p></span>
  <span class="timestamp">
    <p><b>Posted <%= time_ago_in_words(post.created_at) %> ago</b>
      <% if (current_user.id==post.user.id) %>
         <%= button_to "delete",
                  post,
                  :method => :delete,
                  :data => { confirm: "You sure?" } %>
         <% end%>
    </p>

  </span>
</li>
</div>


